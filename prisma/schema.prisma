generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Product {
  id          String @id @default(uuid())
  name        String @unique
  description String?
  price       Float
  inStock     Int     @map("in_stock")
  isAvailable Boolean @default(true) @map("is_avalaible")
  category    Category
  tags        String[]

  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime? @updatedAt @map("updated_at")

  @@map("products")
}

model User {
  id String @id @default(uuid())
  email String @unique

  @@map("users")
}

model Model {
  id String @id @default(uuid())
  name String @unique

  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime? @updatedAt @map("updated_at")

  @@map("models")
}

enum Category {
  FOOD
  ELETRONICS
  HOME
  OTHER
}